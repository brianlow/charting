<h1><span>Clients</span><a class='btn btn-primary pull-right' href="<%= new_client_path %>">Add client</a></h1>

<table class="table table-hover">
<thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @clients.each do |client| %>
    <tr>
      <td><%= client.first_name %></td>
      <td><%= client.last_name %></td>
      <td><a href="mailto:<%= client.email %>"><%= client.email %></td>
      <td><%= number_to_phone(client.phone) %></td>
      <td><a href="<%= client_path(client.id) %>">View</a></td>
    </tr>
  <% end %>
</tbody>
</table>
