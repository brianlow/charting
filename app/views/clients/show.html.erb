<h1><%=@client.first_name%> <%=@client.last_name%></h1>
<div class="row"><div class="col-sm-12"><a href="mailto:<%= @client.email %>"><%= @client.email %></a></div></div>
<div class="row"><div class="col-sm-12"><%= number_to_phone(@client.phone) %></div></div>
<div class="row"><div class="col-sm-12"><%= @client.address %></div></div>
<% if @client.date_of_birth %>
  <div class="row"><div class="col-sm-12">Date of Birth: <%= @client.date_of_birth.strftime("%F") %>, Age: <%= @client.age %></div></div>
<% end %>
<div class="row"><div class="col-sm-12">Added: <%= @client.created_at.strftime("%F") %></div></div>


